<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/photo_image"
        android:layout_width="@dimen/photo_thumbnail_size"
        android:layout_height="@dimen/photo_thumbnail_size"
        android:layout_marginVertical="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        tools:srcCompat="@tools:sample/avatars"
        android:contentDescription="@string/photo_image_desc" />

    <ImageButton
        android:id="@+id/deleteButton"
        android:layout_width="@dimen/photo_button_size"
        android:layout_height="@dimen/photo_button_size"
        android:layout_marginVertical="10dp"
        android:src="@drawable/ic_delete"
        android:layout_gravity="center_vertical"
        android:backgroundTint="@color/colorAccent"
        android:contentDescription="@string/delete_photo_ib_desc" />

</LinearLayout>