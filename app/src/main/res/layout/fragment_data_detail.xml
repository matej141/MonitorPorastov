<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".DataDetailFragment"
        >

        <LinearLayout
            android:id="@+id/data_detail_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/card_style"
            android:orientation="vertical"
            android:padding="10dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="UselessParent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/linear_border_bottom"
                android:weightSum="3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:text="Názov"
                    android:textAppearance="@style/TextAppearance.Detail.Name" />

                <TextView
                    android:id="@+id/data_detail_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:padding="@dimen/data_detail_row_padding"
                    android:textAppearance="@style/TextAppearance.Detail.Value"
                    android:textIsSelectable="true" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/linear_border_bottom"
                android:weightSum="3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="start"

                    android:text="Typ poškodenia"
                    android:textAppearance="@style/TextAppearance.Detail.Name" />

                <TextView
                    android:id="@+id/data_detail_damage_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:padding="@dimen/data_detail_row_padding"
                    android:textAppearance="@style/TextAppearance.Detail.Value"
                    android:textIsSelectable="true" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/linear_border_bottom"
                android:weightSum="3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="start"

                    android:text="Obvod"
                    android:textAppearance="@style/TextAppearance.Detail.Name" />

                <TextView
                    android:id="@+id/data_detail_perimeter"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:padding="@dimen/data_detail_row_padding"
                    android:textAppearance="@style/TextAppearance.Detail.Value"
                    android:textIsSelectable="true" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/linear_border_bottom"
                android:weightSum="3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:text="Plocha"
                    android:textAppearance="@style/TextAppearance.Detail.Name" />

                <TextView
                    android:id="@+id/data_detail_area"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:padding="@dimen/data_detail_row_padding"
                    android:textAppearance="@style/TextAppearance.Detail.Value"
                    android:textIsSelectable="true" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/linear_border_bottom"
                android:weightSum="3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="start"

                    android:text="Poznámky"
                    android:textAppearance="@style/TextAppearance.Detail.Name" />

                <TextView
                    android:id="@+id/data_detail_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:padding="@dimen/data_detail_row_padding"
                    android:textAppearance="@style/TextAppearance.Detail.Value"
                    android:textIsSelectable="true" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/data_detail_photo_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="Fotografie:"
            android:textAppearance="@style/TextAppearance.Detail.Name"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@id/data_detail_photo_rv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/data_detail_table" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/data_detail_photo_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            app:layoutManager="LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/data_detail_photo_header"
            tools:listitem="@layout/data_detail_photo_list_item" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>