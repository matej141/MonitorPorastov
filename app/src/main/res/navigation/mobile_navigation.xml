<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_map">

    <fragment
        android:id="@+id/nav_map"
        android:name="com.android.monitorporastov.MapFragment"
        android:label="@string/menu_map_txt"
        tools:layout="@layout/fragment_map" >
        <action
            android:id="@+id/action_mapFragment_to_addDrawingFragment"
            app:destination="@id/addMeasureFragment" />
    </fragment>

    <fragment
        android:id="@+id/addMeasureFragment"
        android:name="com.android.monitorporastov.AddDamageFragment"
        android:label="Informácie o poškodení"
        tools:layout="@layout/fragment_add_damage" >
        <action
            android:id="@+id/action_addMeasureFragment_to_nav_map"
            app:destination="@id/nav_map"
            app:popUpTo="@+id/addMeasureFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/nav_my_data"
        android:name="com.android.monitorporastov.DataListFragment"
        android:label="Záznamy"
        tools:layout="@layout/fragment_data_list" />

</navigation>